<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppEntrePatas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/co_melon1</item>
        <item name="colorPrimaryVariant">@color/co_toolbar</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/co_melon</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AppEntrePatas.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppEntrePatas.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AppEntrePatas.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.AppEntrePatas.Button" parent="android:Widget.Material.Button"  >
        <item name="android:padding">@dimen/padding_button</item>
        <item name="cornerRadius">@dimen/btn_radius</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ActionBar.nameText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/co_bar</item>
        <!--<item name="android:textSize">18sp</item>-->
        <item name="android:textStyle">bold</item>
    </style>

</resources>